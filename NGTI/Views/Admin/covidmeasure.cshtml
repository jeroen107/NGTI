
@{
    int limit = (int)TempData["limit"];
}


<!doctype html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="description" content="">
    <meta name="author" content="">

    <link rel="stylesheet" href="~/css/covid.css">

</head>

<body>
    <div class="card-header">
        <h4>Limit of reservations on a day : @limit</h4>
    </div>


    <div class="row">
        <div class="col-md-4">
            <form asp-action="covidmeasure">
                <div class="form-group">
                    <label for="limit" class="control-label"></label>
                    <input type="number" id="limit" name="limit" class="form-control" value="@limit" min="0" max="50" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="submit" />
                </div>
            </form>
        </div>
    </div>
</body>
</html>