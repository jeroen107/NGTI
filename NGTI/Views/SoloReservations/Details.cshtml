@model NGTI.Models.SoloReservation

@{
    ViewData["Title"] = "Details";
}


<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/details.css" />
</head>
<body>
    <div>
        <div class="card-header">
            <h1>Details</h1>
        </div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Date):
            </dt>
            <dd class="col-sm-10">
                                           @Convert.ToString(string.Format("{0:ddd d MMMM}", Model.Date))
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TimeSlot):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TimeSlot)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Reason):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Reason)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Seat):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Seat)
            </dd>
        </dl>
    </div>
    <div class="exit">
        <a asp-action="Edit" asp-route-id="@Model.IdSoloReservation" class="submit">Edit</a>
        <a asp-action="Index" class="submit2">Back to List</a>
    </div>


</body>
</html>
