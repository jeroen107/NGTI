@model IEnumerable<Employee>

@{
    ViewData["Title"] = "DeleteTeam";
    string name = (string)TempData["name"];
}
<head>
    <!--<link rel="stylesheet" href="~/css/DeleteTeam.css" />-->
    <link rel="stylesheet" href="~/css/DetailsTeam.css" />
</head>
<div class="m25">
    <div class="card-header">
        <h8>Delete team</h8>
    </div>
    <h4>Are you sure you want to delete this team?</h4>
    
    <dl class="row">
        <dt class="col-sm-2">
            Team Name
        </dt>
        <dd class="col-sm-10">
            @name
        </dd>
    </dl>
    <table class="content-table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BHV)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Admin)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Employee item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BHV)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Admin)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <form asp-action="DeleteConfirmed" asp-route-name="@name">
        <input type="submit" value="Delete" class="button" /> |
        <a asp-controller="Admin_Team" asp-action="Overview" class="button2">Back to List</a>
    </form>
</div>
