@model NGTI.Models.SoloReservation

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>SoloReservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdSoloReservation" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" type="date" asp-format="{0:dd:mm:yyyy}" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeSlot" class="control-label"></label>
                <select asp-for="TimeSlot" class="form-control">
                    <option value="">Choose a TimeSlot</option>
                    <option value="Morning">Morning: 8:00 - 12.00</option>
                    <option value="Afternoon">Afternoon: 12:00 - 16.00</option>
                    <option value="Evening">Evening: 16:00 - 20.00</option>
                </select>
                <span asp-validation-for="TimeSlot" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reason" class="control-label"></label>
                <input asp-for="Reason" class="form-control" />
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seat" class="control-label"></label>
                <select asp-for="Seat" class="form-control" asp-items="ViewBag.Seat"></select>
                <span asp-validation-for="Seat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
